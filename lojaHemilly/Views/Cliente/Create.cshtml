                                <option value="CASADO">Casado</option>
                                <option value="SOLTEIRO">Solteiro</option>
                                <option value="DIVORCIADO">Divorciado</option>
                            </select>
                            <span asp-validation-for="EstadoCivil" class="text-danger"></span>
                        </div>

                        <div class="col-lg-6">
                            <label asp-for="ContatoConjuge" class="control-label"></label>
                            <input asp-for="ContatoConjuge" class="form-control" />
                            <span asp-validation-for="ContatoConjuge" class="text-danger"></span>
