<div class="card card-custom gutter-b">
    <div class="card-header">
        <div class="card-title">
            <h3 class="card-label">
                Editar cliente
                <small>Insira as informações</small>
            </h3>
        </div>
    </div>
    <div class="card-body">
        <form asp-action="Edit">

            <div class="row">
                <div class="col-md-12">
                    <div class="form-group row">
                        <input type="hidden" asp-for="ClienteID" />
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="col-lg-6">
                            <label asp-for="Nome" class="control-label"></label>
                            <input asp-for="Nome" class="form-control" />
                            <span asp-validation-for="Nome" class="text-danger"></span>
                        </div>

                        <div class="col-lg-6">
                            <label asp-for="Cpf" class="control-label"></label>
                            <input asp-for="Cpf" class="form-control" />
                            <span asp-validation-for="Cpf" class="text-danger"></span>
                        </div>

                        <div class="col-lg-6">
                            <label asp-for="Rg" class="control-label"></label>
                            <input asp-for="Rg" class="form-control" />
                            <span asp-validation-for="Rg" class="text-danger"></span>
                        </div>

                        <div class="col-lg-6">
                            <label asp-for="Endereco" class="control-label"></label>
                            <input asp-for="Endereco" class="form-control" />
                            <span asp-validation-for="Endereco" class="text-danger"></span>
                        </div>

                        <div class="col-lg-6">
                            <label asp-for="DataNascimento" class="control-label"></label>
                            <input asp-for="DataNascimento" class="form-control" />
                            <span asp-validation-for="DataNascimento" class="text-danger"></span>
                        </div>

                        <div class="col-lg-6">
                            <label asp-for="EstadoCivil" class="control-label"></label>
                            @* <input asp-for="EstadoCivil" class="form-control" /> *@
                            <select asp-for="EstadoCivil" class="form-control">
                                <option value="0">Selecione</option>
                                <option value="1">Casado</option>
                                <option value="2">Solteiro</option>
                                <option value="3">Divorciado</option>
                            </select>
                            <span asp-validation-for="EstadoCivil" class="text-danger"></span>
                        </div>

                        <div class="col-lg-6">
                            <label asp-for="ContatoConjuge" class="control-label"></label>
                            <input asp-for="ContatoConjuge" class="form-control" />
                            <span asp-validation-for="ContatoConjuge" class="text-danger"></span>
                        </div>

                        <div class="col-lg-6">
                            <label asp-for="CasaPropriaAluguel" class="control-label"></label>
                            @* <input asp-for="CasaPropriaAluguel" class="form-control" /> *@
                            <select asp-for="CasaPropriaAluguel" class="form-control">
                                <option value="0">Selecione</option>
                                <option value="1">Casa própria</option>
                                <option value="2">Aluguel</option>
                            </select>
                            <span asp-validation-for="CasaPropriaAluguel" class="text-danger"></span>
                        </div>

                        <div class="col-lg-6">
                            <label asp-for="Profissao" class="control-label"></label>
                            <input asp-for="Profissao" class="form-control" />
                            <span asp-validation-for="Profissao" class="text-danger"></span>
                        </div>

                        <div class="col-lg-6">
                            <label asp-for="LocalTrabalho" class="control-label"></label>
                            <input asp-for="LocalTrabalho" class="form-control" />
                            <span asp-validation-for="LocalTrabalho" class="text-danger"></span>
                        </div>

                        <div class="col-lg-6">
                            <label asp-for="RendaMensal" class="control-label"></label>
                            <input asp-for="RendaMensal" class="form-control" />
                            <span asp-validation-for="RendaMensal" class="text-danger"></span>
                        </div>

                        <div class="col-lg-6">
                            <label asp-for="Email" class="control-label"></label>
                            <input asp-for="Email" class="form-control" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="col-lg-6">
                            <label asp-for="Telefone" class="control-label"></label>
                            <input asp-for="Telefone" class="form-control" />
                            <span asp-validation-for="Telefone" class="text-danger"></span>
                        </div>

                        <input type="hidden" asp-for="Status" />
                        <input type="hidden" asp-for="DataAlteracaoCadastro" />
                        <input type="hidden" asp-for="DataCadastro" />
                    </div>
                </div>
            </div>


            <div class="form-group">
                <input type="submit" value="Editar" class="btn btn-primary" />
            </div>

        </form>
        <div class="row">
            <div>
                <a asp-action="Index">Voltar para lista de clientes</a>
            </div>

        </div>
    </div>
</div>







